pipeline {
    agent any

    environment {
        DOCKER_IMAGE_NAME = "cloudshegerlab.jfrog.io:1.0"
        DOCKER_HUB_CREDENTIALS = credentials('art-api-token')
        DOCKER_IMAGE = "${DOCKER_REGISTRY}/${DOCKER_REPO}"
        DOCKER_TAG = 'latest'
    }

    stages {
        stage('Build Docker Image') {
            steps {
                script {
                    docker.build("${DOCKER_IMAGE}")
                }
            }
        }

        stage('Build and Push Docker Image') {
            steps {
             script {
                  withCredentials([string(credentialsId: 'art-api-token', variable: 'ARTIFACTORY_CREDENTIALS')]) {
                    docker.withRegistry('https://cloudshegerlab.jfrog.io', 'ARTIFACTORY_CREDENTIALS') {
                        app.push("${env.BUILD_NUMBER}")
                        app.push("latest")
                    }
                  }
                }
            }
        }
    }

    post {
        failure {
            echo 'Docker build and push failed!'
        }
        success {
            echo 'Docker build and push successful!'
        }
    }
}